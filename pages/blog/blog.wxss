/**index.wxss**/
page{
  height: 100%;
}
.container {
  padding: 0;
  justify-content: flex-start;
}
.tabs-wrapper{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 10%;
}
.tabs-wrapper .tab{
  padding-bottom: 10rpx;
  color: #888888;
  border: 0;
}
.tabs-wrapper .active{
  border-bottom:5rpx solid #333333;
  color: #333333;
}

.content-wrapper{
  width: 100%;
  height: 90%;
}

.scroll-view{
  width: 100%;
  height: 100%;
  display: none;
}
.content-wrapper .active{
  display: block;
}
.article-wrapper{
  margin: 30rpx 20rpx 30rpx 20rpx;
  padding: 0 0 20rpx 0;
  border-bottom:3rpx solid #E5E5E5;
  display: flex;
  flex-direction: column;
}
.article-wrapper .title{
  font-size: 32rpx;
  line-height: 35rpx;
  color: #333333;
}
.article-wrapper .bottom{
  display: flex;
  align-items: center;
  margin: 25rpx 0 0 0;
}
.article-wrapper .bottom .total-click{
  font-size: 24rpx;
  color: #999999;
}
.article-wrapper .bottom .separate{
  font-size: 24rpx;
  color: #999999;
  margin: 0 15rpx 0 15rpx;
}
.article-wrapper .bottom .time{
  font-size: 24rpx;
  color: #999999;
}

.more-msg{
   height: 80rpx;
   line-height: 80rpx;
   text-align: center;
   font-size: 26rpx;
   color: #353535;
}