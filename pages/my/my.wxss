page{
  height: 100%;
}
.container {
  padding: 0;
  justify-content: flex-start;
  background-color: #F2F2F2;
}

.userinfo-wrapper{
    background-color: #FFF;
    margin: 20rpx 0 0 0;
    padding: 100rpx 0 100rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
}
.userinfo-wrapper .avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.userinfo-wrapper .nickname {
  color: #aaa;
  font-size: 35rpx;
  margin: 20rpx 0 0 0;
}

.other-wrapper{
  margin: 20rpx 0 0 0;
  background-color: #FFFFFF;
  width: 100%;
}
.other-wrapper .item{
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom:2rpx solid #E5E5E5;
  padding: 0 20rpx 0 20rpx;
}
.other-wrapper .txt{
  font-size: 34rpx;
  color: #333333;
}
.other-wrapper .arrow{
  width: 18rpx;
  margin: 0 20rpx 0 0;
}

.no-border{
  border:0 !important;
}